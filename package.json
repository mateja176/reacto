{
  "name": "reacto",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "codegen": "graphql-codegen -r dotenv/config --config codegen.yml",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "format": "prettier src/**/*.ts --check",
    "format:fix": "prettier src/**/*.ts --write",
    "lint": "eslint src/**/*.ts",
    "ci": "cross-env CI=true concurrently --kill-others-on-fail --names format,lint,type-check,test --prefix-colors yellow,cyan,blue,green npm:format npm:lint npm:type-check npm:test",
    "start": "ts-node src/index.ts",
    "codegen:watch": "nodemon --watch 'src/**/*.graphql' --ext graphql --exec 'ts-node' scripts/codegen.ts",
    "codegen:wait": "wait-on --log tcp:$PORT && npm run codegen:watch",
    "codegen:watch:wait": "dotenv npm -- run codegen:wait",
    "dev:server": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/index.ts",
    "dev": "concurrently --names server,codegen npm:dev:server npm:codegen:watch:wait",
    "serve": "node build/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mateja176/reacto.git"
  },
  "keywords": [],
  "author": "Mateja Petrovic <mateja176@gmail.com> (https://github.com/mateja176)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mateja176/reacto/issues"
  },
  "homepage": "https://github.com/mateja176/reacto#readme",
  "devDependencies": {
    "@graphql-codegen/cli": "1.19.2",
    "@graphql-codegen/introspection": "1.18.0",
    "@graphql-codegen/typescript": "1.17.11",
    "@graphql-codegen/typescript-mongodb": "1.17.8",
    "@graphql-codegen/typescript-resolvers": "1.17.11",
    "@graphql-tools/merge": "^6.2.5",
    "@types/express": "^4.17.9",
    "@types/fs-extra": "^9.0.4",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.9",
    "@types/ramda": "^0.27.32",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^4.0.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2",
    "wait-on": "^5.2.0"
  },
  "dependencies": {
    "apollo-server-express": "^2.19.0",
    "express": "^4.17.1",
    "fs-extra": "^9.0.1",
    "graphql": "^15.4.0",
    "ramda": "^0.27.1"
  }
}
